
<div class="jumbotron">
<div class="container">
  <h1>Hello, world!</h1>
  <p>This is a sample app that demos the third party implementation of DFS. </p>
  <% if user_signed_in? %>
  <p><a class="btn btn-primary btn-lg" href="#" data-toggle="modal" data-target="#JoinModal" role="button">PLAY DFS NOW!</a></p>
  <% else %>
  <p><a href="/users/sign_in">Login</a> or <a href="/users/sign_up">Register</a> first to start.</p>
  <% end %>
</div>
</div>

<% if user_signed_in? %>
<div class="row">
	<div class="col-md-6">

		<div class="panel panel-default">
		  <div class="panel-body">
		    <center>
			    To add more funds to your account just click the button below.<br><br>
		    	<button class="btn btn-success"><i class="fa fa-money"></i> Add Credits</button>
		    </center>
		  </div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="panel panel-default">
		  <div class="panel-body">
		    <center>
			    To withdraw funds to your DFS account just click the button below.<br><br>
		    	<button class="btn btn-default"><i class="fa fa-money"></i> Withdraw Credits</button>
		    </center>
		  </div>
		</div>
	</div>
</div>

<% end %>